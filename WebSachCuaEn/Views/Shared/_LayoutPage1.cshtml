<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <link href="~/css/style.css" rel="stylesheet">
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <title>Ngọc Én BookStore</title>
    <style>
        .field-validation-error {
            color: red;
        }
        .text-muted{
            color:red !important;
        }
    </style>

</head>
<body>
    <div>
        <nav class="navbar navbar-expand-lg bg-white navbar-light sticky-top p-0 px-4 px-lg-5">
            <a href="~/Home/Index" class="navbar-brand d-flex align-items-center">
                <h2 class="m-0 text-primary" style="color:darkgreen">
                    <img class="img-fluid me-2" src="img/icon-1.png" alt=""
                         style="width: 45px;">Ngọc Én BookStore
                </h2>
            </a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav ms-auto py-4 py-lg-0">
                    <a class="nav-item nav-link" href="~/Home/Index">Trang chủ</a>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle active" data-bs-toggle="dropdown">Menu</a>
                        <div class="dropdown-menu shadow-sm m-0">
                            <a class="dropdown-item" href="~/Sach/Index">Sách</a>
                            <a class="dropdown-item" href="~/LoaiSach/Index">Chủ đề</a>
                            <a class="dropdown-item" href="~/TacGia/Index">Tác giả</a>
                        </div>
                    </div>
                </div>

                    @if (User.Identity.IsAuthenticated)
                    {

                        <a class="nav-item nav-link" href="#">Liên hệ </a>
                        <a class="nav-item nav-link" href="~/GioHang/GioHang">Giỏ hàng</a>
                        <a class="nav-item nav-link" href="/Account/Profile">Thông tin tài khoản</a>
                        <a class="nav-item nav-link" href="/Account/Logout">Đăng xuất</a>
                    }
                    else
                    {
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle active" data-bs-toggle="dropdown">Tài khoản</a>
                            <div class="dropdown-menu shadow-sm m-0">
                                <a class="dropdown-item" href="/Account/Register">Đăng ký</a>
                                <a class="dropdown-item" href="/Account/Login">Đăng nhập</a>
                            </div>
                        </div>
                    }
                    
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                <div style="color:darkblue; font-weight:bold">
                    Xin chao @User.Identity.Name
                </div>
            }
        </nav>
    </div>
    
    <!-- Header Start -->
    <!--div class="container-fluid hero-header bg-light mb-5">
        <div class="container py-5">
            <div class="row g-5 align-items-center">
                <div class="col-lg-6">-->
                    @*<h1 class="mb-3 animated slideInDown"> Sách đẹp sách rẻ</h1>*@
                    <!--<nav aria-label="breadcrumb animated slideInDown">
                        <ol class="breadcrumb mb-0">-->
                            @*<li class="breadcrumb-item">@Html.ActionLink(@ViewContext.RouteData.Values["controller"].ToString(), "Index", @ViewContext.RouteData.Values["controller"].ToString())</li>*@
                            @*<li class="breadcrumb-item active" aria-current="page">@@@ Title</li>*@
                        <!--</ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>-->
    <!-- Header End -->
    <!-- Body Start -->
    <div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                   @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <!-- Body End -->
    <!-- Footer Start -->
    <div class="container-fluid bg-light footer mt-5 pt-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container py-5">
            <div class="row g-5">
                <div class="col-md-6">
                    <h1 class="text-primary mb-4">
                        <img class="img-fluid me-2" src="img/icon-1.png" alt=""
                             style="width: 45px;">Ngọc Én BookStore
                    </h1>
                    <span>Giới thiệu bản thân</span>
                </div>
                <div class="col-md-6">
                    <h5 class="mb-4">Đăng ký nhận tin</h5>
                    <p>Điền email vào form bên dưới để đăng ký nhận tin</p>
                    <div class="position-relative">
                        <input class="form-control bg-transparent w-100 py-3 ps-4 pe-5" type="text"
                               placeholder="Your email">
                        <button type="button"
                                class="btn btn-primary py-2 px-3 position-absolute top-0 end-0 mt-2 me-2">
                            Đăng ký
                        </button>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <h5 class="mb-4">Thông tin liên hệ</h5>
                    <p><i class="fa fa-map-marker-alt me-3"></i>Địa chỉ</p>
                    <p><i class="fa fa-phone-alt me-3"></i>Điện thoại</p>
                    <p><i class="fa fa-envelope me-3"></i>Email</p>
                </div>
               
                <div class="col-lg-4 col-md-6">
                    <h5 class="mb-4">Mạng xã hội</h5>
                    <div class="d-flex">
                        <a class="btn btn-square rounded-circle me-1" href=""><i class="fab fa-twitter"></i></a>
                        <a class="btn btn-square rounded-circle me-1" href=""><i class="fab fa-facebook-f"></i></a>
                        <a class="btn btn-square rounded-circle me-1" href=""><i class="fab fa-youtube"></i></a>
                        <a class="btn btn-square rounded-circle me-1" href=""><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer End -->
    
    
</body>
</html>
