<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/Bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <title>@ViewBag.Title</title>
    <style>
        .field-validation-error {
            color: red;
        }
    </style>
</head>
<body>
    <div>
        <nav class="navbar navbar-expand-lg navbar-light bg-secondary">
            <div class="container-fluid">
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="~/Admin/Home/Index">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Admin/LoaiSach/Index">Quản lý Loại sách</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Admin/Sach/Index">Quản lý Sách </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Admin/TacGia/Index">Quản lý Tác giả</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Admin/Users/Index">Quản lý Tài khoản</a>
                        </li>
                        
                        @if (User.Identity.IsAuthenticated)
                        {
                            
                            <li class="nav-item">
                                <a class="nav-link" href="/Account/Logout">Đăng xuất</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                <div style="color:whitesmoke; font-weight:bold">
                    Xin chao @User.Identity.Name
                </div>
            }
        </nav>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-2" style="background-color:darkgray;min-height:1000px;padding:0;">
                <div class="list-group">
                    <a href="#" class="list-group-item" style="background-color:transparent;">
                        Sản Phẩm Yêu Thích
                    </a>
                    <a href="#" class="list-group-item" style="background-color:transparent;">
                        Thông tin cá nhân
                    </a>
                    @RenderSection("sidebar", required: false)
                </div>
            </div>
            <div class="col-10">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
