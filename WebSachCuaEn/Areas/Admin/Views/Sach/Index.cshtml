@model List<WebSachCuaEn.Models.SACH>
@{
    ViewBag.Title = "Index";
}

<p>
    @using (Html.BeginForm("Index", "Sach", FormMethod.Get))
    {
    <p>
        Tìm kiếm: @Html.TextBox("searchString") --- Chủ đề: @Html.DropDownList("MaLoai", new SelectList(ViewBag.data, "MaLoai", "TenLoai")) <input type="submit" value="Tìm kiếm" />
    </p>
}
</p>
    <h2 style="color:blue">Danh sách Sách</h2>

    <p>@Html.ActionLink("Thêm sách", "Create", new { area = "Admin" }, new { controller = "Sach" })</p>

    <table class="table">
        <tr>
            <th>Mã sách  </th>
            <th>Tên sách </th>
            <th>Giá bán  </th>
            <th>Mô tả </th>
            <th>Ảnh bìa </th>
            <th>Ngày cập nhật</th>
            <th>Số lượng tồn</th>
            <th>Chủ đề</th>
            <th>Nhà xuất bản</th>
            <th>Sửa</th>
            <th>Xóa</th>
            <th>Xem chi tiết</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(row => item.Masach)</td>
                <td>@Html.DisplayFor(row => item.Tensach)</td>
                <td>@Html.DisplayFor(row => item.Giaban) VND</td>
                <td>@Html.DisplayFor(row => item.Mota)</td>
                <td><img src="@Url.Content("~/Content/images/anhsp/"+ item.Anhbia)" width="120px" /></td>
                <td>@Html.DisplayFor(row => item.Ngaycapnhat)</td>
                <td>@Html.DisplayFor(row => item.Soluongton)</td>
                <td>@Html.DisplayFor(row => item.Loai.TenLoai)</td>
                <td>@Html.DisplayFor(row => item.NHAXUATBAN.TenNXB)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Masach, controller = "Sach", area = "Admin" })
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.Masach, controller = "Sach", area = "Admin" })
                </td>
                <td>
                    <a href="~/Admin/Sach/Detail/@item.Masach">Xem chi tiết</a>

                </td>
            </tr>
        }
    </table>
